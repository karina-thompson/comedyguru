


<div class="container">
  <div class="row">
      <div class="col s12 m10 offset-m1">
        <div class="card-panel white">
          <div class="row"> 
          <%= form_tag(url: login_path)  %>
            <div class="input-field col s6">
              <%= label_tag(:email, "Email") %>
              <%= text_field_tag(:email, nil, class: 'validate', type: 'email') %>
            </div>
            <div class="input-field col s6">
                <%= label_tag(:password, "Password") %>
                <%= password_field_tag(:password, nil, class: 'validate') %>
            </div>
               <%= submit_tag("Sign In", class: "btn waves-effect waves-light") do %>
              <% end %>
              <a href="/signup">New user? Sign up now!</a> 
          </div>
        </div>
      </div>
    </div>
</div>

